@{
    ViewBag.Title = "Xác nhận khôi phục mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="modern-confirm d-flex align-items-center justify-content-center">
    <div class="confirm-box shadow-lg p-5 text-center">
        <div class="icon-check mb-4">
            <i class="bi bi-envelope-check-fill"></i>
        </div>

        <h2 class="fw-bold mb-3">Đã gửi liên kết khôi phục!</h2>
        <p class="text-muted mb-4">
            Chúng tôi đã gửi một email chứa liên kết đặt lại mật khẩu đến địa chỉ bạn cung cấp.<br />
            Vui lòng kiểm tra hộp thư của bạn (bao gồm cả mục <strong>Spam / Quảng cáo</strong>) để tiếp tục.
        </p>

        <a href="@Url.Action("Login", "Account")" class="btn btn-confirm fw-bold px-5">
            Quay lại đăng nhập
        </a>
    </div>
</section>

<style>
    /* Font riêng cho khung thông báo */
    .confirm-box {
        font-family: "Times New Roman", serif !important;
    }

    /* Nền tổng thể */
    .modern-confirm {
        min-height: calc(100vh - 120px);
        background: linear-gradient(135deg, #f9fafb 0%, #fff0f0 100%);
        position: relative;
        padding: 140px 0 100px;
    }

        /* Blob nền */
        .modern-confirm::before {
            content: "";
            position: absolute;
            top: 20%;
            right: 20%;
            width: 200px;
            height: 200px;
            background: radial-gradient(circle at top left, #ff9966, #ff5e62);
            border-radius: 50%;
            opacity: 0.8;
            z-index: 0;
        }

        .modern-confirm::after {
            content: "";
            position: absolute;
            bottom: 12%;
            left: 18%;
            width: 160px;
            height: 160px;
            background: radial-gradient(circle at bottom right, #ff6a88, #ff99ac);
            border-radius: 50%;
            opacity: 0.7;
            z-index: 0;
        }

    /* Hộp xác nhận */
    .confirm-box {
        position: relative;
        z-index: 1;
        max-width: 500px;
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: 18px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    h2 {
        color: #333;
        font-size: 1.6rem;
    }

    p {
        font-size: 1rem;
        line-height: 1.6;
    }

    /* Icon check */
    .icon-check {
        font-size: 3rem;
        color: #00b09b;
    }

    /* Nút quay lại */
    .btn-confirm {
        background: linear-gradient(to right, #00b09b, #96c93d);
        color: white;
        font-size: 1.1rem;
        padding: 10px 40px;
        border-radius: 8px;
        border: none;
        transition: all 0.3s ease;
    }

        .btn-confirm:hover {
            background: linear-gradient(to right, #00a78b, #8bbf2d);
            box-shadow: 0 6px 18px rgba(0, 176, 155, 0.3);
            transform: translateY(-2px);
        }
</style>
