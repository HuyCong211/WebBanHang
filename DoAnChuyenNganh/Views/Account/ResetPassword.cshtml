@model DoAnChuyenNganh.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Đặt lại mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<section class="modern-login d-flex align-items-center justify-content-center">
    <div class="login-box shadow-lg p-4">
        @*<h2 class="text-center fw-bold mb-4">Vui lòng nhập địa chỉ email và mật khẩu mới của bạn để hoàn tất quá trình khôi phục.!</h2>*@
        <p class="text-center text-muted mb-4">
            Vui lòng nhập địa chỉ email và mật khẩu mới của bạn để hoàn tất quá trình khôi phục!
        </p>

        @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger mb-3 text-center" })
            @Html.HiddenFor(model => model.Code)

            <div class="text-center">
                <!-- Email -->
                <div class="mb-3 form-wrapper">
                    <label class="form-label fw-semibold">Địa chỉ Email</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="bi bi-envelope-fill text-muted"></i>
                        </span>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control text-center", placeholder = "e.g. tenban@email.com" })
                    </div>
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger small" })
                </div>

                <!-- Mật khẩu mới -->
                <div class="mb-3 form-wrapper">
                    <label class="form-label fw-semibold">Mật khẩu mới</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="bi bi-lock-fill text-muted"></i>
                        </span>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control text-center", placeholder = "••••••••", id = "Password" })
                        <span class="input-group-text toggle-password" data-target="#Password">
                            <i class="bi bi-eye-slash-fill text-muted"></i>
                        </span>
                    </div>
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger small" })
                </div>

                <!-- Xác nhận mật khẩu -->
                <div class="mb-4 form-wrapper">
                    <label class="form-label fw-semibold">Xác nhận mật khẩu</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="bi bi-shield-lock-fill text-muted"></i>
                        </span>
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control text-center", placeholder = "••••••••", id = "ConfirmPassword" })
                        <span class="input-group-text toggle-password" data-target="#ConfirmPassword">
                            <i class="bi bi-eye-slash-fill text-muted"></i>
                        </span>
                    </div>
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger small" })
                </div>
            </div>

            <!-- Nút -->
            <div class="text-center mb-3">
                <button type="submit" class="btn btn-login fw-bold px-5">Cập nhật mật khẩu</button>
            </div>

            <div class="text-center small">
                <a href="@Url.Action("Login", "Account")" class="text-decoration-none text-danger fw-semibold">← Quay lại đăng nhập</a>
            </div>
        }
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.querySelectorAll(".toggle-password").forEach(item => {
                item.addEventListener("click", function () {
                    const target = document.querySelector(this.dataset.target);
                    const icon = this.querySelector("i");
                    if (target.type === "password") {
                        target.type = "text";
                        icon.classList.replace("bi-eye-slash-fill", "bi-eye-fill");
                    } else {
                        target.type = "password";
                        icon.classList.replace("bi-eye-fill", "bi-eye-slash-fill");
                    }
                });
            });
        });
    </script>
}

<style>
    /* --- CĂN CHUẨN FORM --- */
    .modern-login {
        min-height: 100vh;
        background: linear-gradient(135deg, #f9fafb 0%, #fff0f0 100%);
        position: relative;
        display: flex;
        align-items: flex-start;
        justify-content: center;
        padding-top: 160px; /* đẩy form xuống dưới header cố định */
    }

        .modern-login::before {
            content: "";
            position: absolute;
            top: 20%;
            right: 25%;
            width: 160px;
            height: 160px;
            background: radial-gradient(circle at top left, #ff9966, #ff5e62);
            border-radius: 50%;
            opacity: 0.8;
        }

        .modern-login::after {
            content: "";
            position: absolute;
            bottom: 15%;
            left: 20%;
            width: 140px;
            height: 140px;
            background: radial-gradient(circle at bottom right, #ff6a88, #ff99ac);
            border-radius: 50%;
            opacity: 0.7;
        }

    .login-box {
        font-family: "Times New Roman", serif !important;
        position: relative;
        z-index: 1;
        width: 100%;
        max-width: 400px;
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(8px);
        border-radius: 15px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        margin-bottom: 60px;
    }

    /* --- INPUT & ICON --- */
    .form-wrapper {
        width: 100%;
        max-width: 320px;
        margin: 0 auto 1.2rem auto;
    }

    .input-group {
        width: 100%;
        margin: 0;
        display: flex;
        align-items: stretch;
    }

    .input-group-text {
        background: #fff;
        border: 1px solid #ced4da;
        border-right: 0;
        border-radius: 6px 0 0 6px;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0 12px;
    }

    .toggle-password {
        border-left: 0;
        border-radius: 0 6px 6px 0;
        background: #fff;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: color 0.2s ease;
    }

        .toggle-password:hover i {
            color: #00a78b;
        }

    .form-control {
        padding: 12px 14px;
        font-size: 1rem;
        border-radius: 0;
        border-left: 0;
        border-right: 0;
        min-height: 46px;
        box-sizing: border-box;
        width: 100%;
    }

        .form-control:focus {
            border-color: #ff5e62;
            box-shadow: 0 0 6px rgba(255, 94, 98, 0.3);
        }

    h2 {
        margin-bottom: 1rem;
        color: #333;
    }

    p.text-muted {
        margin-bottom: 2rem;
    }

    /* --- BUTTON --- */
    .btn-login {
        background: linear-gradient(to right, #00b09b, #96c93d);
        color: #fff;
        font-size: 1.1rem;
        padding: 10px 40px;
        border-radius: 8px;
        border: none;
        transition: all 0.3s ease;
    }

        .btn-login:hover {
            background: linear-gradient(to right, #00a78b, #8bbf2d);
            box-shadow: 0 6px 18px rgba(0, 176, 155, 0.3);
            transform: translateY(-2px);
        }

    a:hover {
        color: #00a78b !important;
    }
    /* --- FIX TRÀN TEXTBOX DỨT ĐIỂM --- */
    .form-wrapper {
        max-width: 280px;
        margin: 0 auto 1.2rem auto;
    }

    .input-group {
        width: 100%;
        display: flex;
        align-items: stretch;
        border: 1px solid #ced4da;
        border-radius: 6px;
        overflow: hidden;
        background: #fff;
    }

    .input-group-text {
        border: 0 !important;
        background: transparent;
        width: 42px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .form-control {
        border: 0 !important;
        flex: 1 1 auto;
        width: 100%;
        min-width: 0;
        box-sizing: border-box;
        padding: 12px 14px;
    }

    .toggle-password {
        border: 0 !important;
        background: transparent;
        width: 42px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
    }

    .form-control:focus {
        outline: none;
        box-shadow: none;
    }



</style>
