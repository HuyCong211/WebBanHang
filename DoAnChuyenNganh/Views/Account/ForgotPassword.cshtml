@model DoAnChuyenNganh.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Quên mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="modern-forgot d-flex align-items-center justify-content-center">
    <div class="forgot-box shadow-lg p-4">
        <h2 class="text-center fw-bold mb-4">Khôi phục mật khẩu</h2>
        <p class="text-center text-muted mb-4">Nhập địa chỉ email của bạn, chúng tôi sẽ gửi liên kết để đặt lại mật khẩu.</p>

        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger mb-3 text-center" })

            <div class="text-center">
                <div class="mb-4 form-wrapper">
                    <label class="form-label fw-semibold">Địa chỉ Email</label>
                    <div class="input-group justify-content-center">
                        <span class="input-group-text bg-white border-end-0">
                            <i class="bi bi-envelope-fill text-muted"></i>
                        </span>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control border-start-0 text-center", placeholder = "e.g. tenban@email.com" })
                    </div>
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger small" })
                </div>
            </div>

            <div class="text-center mb-4">
                <button type="submit" class="btn btn-forgot fw-bold px-4">Gửi liên kết khôi phục</button>
            </div>

            <div class="text-center small">
                <a href="@Url.Action("Login", "Account")" class="text-decoration-none text-danger fw-semibold">← Quay lại đăng nhập</a>
            </div>
        }
    </div>
</section>

<style>
    /* Font riêng cho khung form */
    .forgot-box {
        font-family: "Times New Roman", serif !important;
    }

    /* Nền tổng thể */
    .modern-forgot {
        min-height: calc(100vh - 120px);
        background: linear-gradient(135deg, #f9fafb 0%, #fff0f0 100%);
        position: relative;
        padding: 140px 0 100px;
    }

        /* Blob nền */
        .modern-forgot::before {
            content: "";
            position: absolute;
            top: 18%;
            right: 18%;
            width: 200px;
            height: 200px;
            background: radial-gradient(circle at top left, #ff9966, #ff5e62);
            border-radius: 50%;
            opacity: 0.8;
            z-index: 0;
        }

        .modern-forgot::after {
            content: "";
            position: absolute;
            bottom: 10%;
            left: 20%;
            width: 160px;
            height: 160px;
            background: radial-gradient(circle at bottom right, #ff6a88, #ff99ac);
            border-radius: 50%;
            opacity: 0.7;
            z-index: 0;
        }

    /* Form chính */
    .forgot-box {
        position: relative;
        z-index: 1;
        width: 100%;
        max-width: 480px;
        background: rgba(255, 255, 255, 0.94);
        backdrop-filter: blur(10px);
        border-radius: 16px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        padding: 50px 60px !important;
    }

    h2 {
        color: #333;
        font-size: 1.6rem;
    }

    /* Căn giữa input */
    .form-wrapper {
        max-width: 340px;
        margin: 0 auto;
        text-align: left;
    }

    .input-group {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .form-control {
        padding: 12px 14px;
        font-size: 1rem;
        border-radius: 0 6px 6px 0;
    }

        .form-control:focus {
            border-color: #ff5e62;
            box-shadow: 0 0 6px rgba(255, 94, 98, 0.3);
        }

    /* Nút gửi link */
    .btn-forgot {
        background: linear-gradient(to right, #00b09b, #96c93d);
        color: white;
        font-size: 1.05rem;
        padding: 10px 35px;
        border-radius: 8px;
        border: none;
        transition: all 0.3s ease;
    }

        .btn-forgot:hover {
            background: linear-gradient(to right, #00a78b, #8bbf2d);
            box-shadow: 0 6px 18px rgba(0, 176, 155, 0.3);
            transform: translateY(-2px);
        }

    a:hover {
        color: #00a78b !important;
    }
</style>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
