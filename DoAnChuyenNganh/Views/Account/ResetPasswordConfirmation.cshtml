@{
    ViewBag.Title = "Xác nhận đặt lại mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<section class="modern-login d-flex align-items-center justify-content-center">
    <div class="login-box shadow-lg p-4 text-center">
        <h2 class="fw-bold mb-3">Mật khẩu của bạn đã được đặt lại thành công!</h2>
        <p class="text-muted mb-4">
            Cảm ơn bạn đã hoàn tất quá trình khôi phục tài khoản.
            Hãy đăng nhập lại để tiếp tục mua sắm cùng <strong>KRIK Shop</strong>.
        </p>

        <div class="text-center mb-4">
            <i class="bi bi-check-circle-fill" style="font-size: 60px; color: #00b09b;"></i>
        </div>

        <div class="text-center">
            <a href="@Url.Action("Login", "Account")" class="btn btn-login fw-bold px-5">
                Đăng nhập ngay
            </a>
        </div>
    </div>
</section>

<style>
    /* --- FORM CHUNG (dùng lại style từ ResetPassword) --- */
    .modern-login {
        min-height: 100vh;
        background: linear-gradient(135deg, #f9fafb 0%, #fff0f0 100%);
        position: relative;
        display: flex;
        align-items: flex-start;
        justify-content: center;
        padding-top: 160px;
    }

        .modern-login::before {
            content: "";
            position: absolute;
            top: 20%;
            right: 25%;
            width: 160px;
            height: 160px;
            background: radial-gradient(circle at top left, #ff9966, #ff5e62);
            border-radius: 50%;
            opacity: 0.8;
        }

        .modern-login::after {
            content: "";
            position: absolute;
            bottom: 15%;
            left: 20%;
            width: 140px;
            height: 140px;
            background: radial-gradient(circle at bottom right, #ff6a88, #ff99ac);
            border-radius: 50%;
            opacity: 0.7;
        }

    .login-box {
        font-family: "Times New Roman", serif !important;
        position: relative;
        z-index: 1;
        width: 100%;
        max-width: 420px;
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(8px);
        border-radius: 15px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        margin-bottom: 60px;
    }

    h2 {
        color: #333;
        font-size: 1.5rem;
    }

    p.text-muted {
        font-size: 1rem;
        color: #666 !important;
    }

    .btn-login {
        background: linear-gradient(to right, #00b09b, #96c93d);
        color: #fff;
        font-size: 1.1rem;
        padding: 10px 40px;
        border-radius: 8px;
        border: none;
        transition: all 0.3s ease;
    }

        .btn-login:hover {
            background: linear-gradient(to right, #00a78b, #8bbf2d);
            box-shadow: 0 6px 18px rgba(0, 176, 155, 0.3);
            transform: translateY(-2px);
            color: #fff;
        }
</style>
