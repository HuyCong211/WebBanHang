@using DoAnChuyenNganh.Models
@model LoginViewModel
@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="modern-login d-flex align-items-center justify-content-center">
    <div class="login-box shadow-lg p-4">
        <h2 class="text-center fw-bold mb-4">KRIK rất vui được gặp lại bạn!</h2>

        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3 text-center" })

            <div class="text-center">
                <div class="mb-3 form-wrapper">
                    <label class="form-label fw-semibold">Email của bạn</label>
                    <div class="input-group justify-content-center">
                        <span class="input-group-text bg-white border-end-0">
                            <i class="bi bi-person-fill text-muted"></i>
                        </span>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control border-start-0 text-center", placeholder = "e.g. tenban@email.com" })
                    </div>
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger small" })
                </div>

                <div class="mb-3 form-wrapper">
                    <label class="form-label fw-semibold">Mật khẩu</label>
                    <div class="input-group justify-content-center">
                        <span class="input-group-text bg-white border-end-0">
                            <i class="bi bi-lock-fill text-muted"></i>
                        </span>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control border-start-0 text-center", placeholder = "••••••••" })
                    </div>
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger small" })
                </div>
            </div>

            <!-- Nút đăng nhập căn giữa -->
            <div class="text-center mb-4">
                <button type="submit" class="btn btn-login fw-bold px-5">Đăng nhập</button>
            </div>

            <!-- Hai link tách hai bên -->
            <div class="d-flex justify-content-between small">
                <a href="@Url.Action("Register", "Account")" class="text-decoration-none text-danger fw-semibold">Chưa có tài khoản?</a>
                <a href="@Url.Action("ForgotPassword", "Account")" class="text-decoration-none text-muted">Quên mật khẩu?</a>
            </div>
        }
    </div>
</section>

<style>
    /* Không ảnh hưởng font tổng thể website */
    .login-box {
        font-family: "Times New Roman", serif !important;
    }

    /* Nền tổng thể */
    .modern-login {
        min-height: 100vh;
        background: linear-gradient(135deg, #f9fafb 0%, #fff0f0 100%);
        position: relative;
    }

        /* Vòng tròn trang trí */
        .modern-login::before {
            content: "";
            position: absolute;
            top: 20%;
            right: 25%;
            width: 160px;
            height: 160px;
            background: radial-gradient(circle at top left, #ff9966, #ff5e62);
            border-radius: 50%;
            opacity: 0.8;
            z-index: 0;
        }

        .modern-login::after {
            content: "";
            position: absolute;
            bottom: 15%;
            left: 20%;
            width: 140px;
            height: 140px;
            background: radial-gradient(circle at bottom right, #ff6a88, #ff99ac);
            border-radius: 50%;
            opacity: 0.7;
            z-index: 0;
        }

    /* Form đăng nhập */
    .login-box {
        position: relative;
        z-index: 1;
        width: 100%;
        max-width: 420px;
        background: rgba(255, 255, 255, 0.92);
        backdrop-filter: blur(8px);
        border-radius: 15px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    }

    h2 {
        color: #333;
        font-size: 1.5rem;
    }

    /* Căn giữa input-group trong form */
    .form-wrapper {
        max-width: 320px;
        margin: 0 auto;
        text-align: left;
    }

    .input-group {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .input-group-text {
        border-top-left-radius: 6px;
        border-bottom-left-radius: 6px;
    }

    .form-control {
        padding: 12px 14px;
        font-size: 1rem;
        border-radius: 0 6px 6px 0;
    }

        .form-control:focus {
            border-color: #ff5e62;
            box-shadow: 0 0 6px rgba(255, 94, 98, 0.3);
        }

    /* Button login */
    .btn-login {
        background: linear-gradient(to right, #00b09b, #96c93d);
        color: #fff;
        font-size: 1.1rem;
        padding: 10px 40px;
        border-radius: 8px;
        border: none;
        transition: all 0.3s ease;
    }

        .btn-login:hover {
            background: linear-gradient(to right, #00a78b, #8bbf2d);
            box-shadow: 0 6px 18px rgba(0, 176, 155, 0.3);
            transform: translateY(-2px);
        }

    /* Link hover */
    a:hover {
        color: #00a78b !important;
    }
</style>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
