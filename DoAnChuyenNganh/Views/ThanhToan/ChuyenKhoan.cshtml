@model DoAnChuyenNganh.Models.EF.DonHang
@{
    ViewBag.Title = "Thanh toán chuyển khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var donHang = ViewBag.DonHang as DoAnChuyenNganh.Models.EF.DonHang;
}
<div class="container" style="margin-top:150px; margin-bottom:100px;">
    <div class="container mt-5 mb-5">
        <h2 class="text-center text-success mb-4">Thanh toán chuyển khoản</h2>

        <div class="card shadow-lg p-4 mx-auto" style="max-width:600px;">
            <p><strong>Ngân hàng nhận:</strong> Ngân hàng Demo Bank</p>
            <p><strong>Số tài khoản nhận:</strong> 9704 0000 0000 0012</p>
            <p><strong>Chủ tài khoản:</strong> CÔNG TY TNHH DEMO</p>
            <p><strong>Số tiền:</strong> <span class="text-danger">@donHang.TongTien.ToString("N0") đ</span></p>

            <hr />

            <form action="@Url.Action("XacNhanChuyenKhoan", "ThanhToan")" method="post">
                <input type="hidden" name="donHangId" value="@donHang.DonHangId" />

                <div class="form-group mb-3">
                    <label>Họ tên người chuyển</label>
                    <input type="text" name="tenNguoiChuyen" class="form-control" required placeholder="Ví dụ: Nguyễn Văn A" />
                </div>

                <div class="form-group mb-3">
                    <label>Ngân hàng gửi</label>
                    <input type="text" name="nganHangGui" class="form-control" required placeholder="Ví dụ: Vietcombank" />
                </div>

                <div class="form-group mb-3">
                    <label>Số tài khoản gửi</label>
                    <input type="text" name="soTaiKhoanGui" class="form-control" required placeholder="Ví dụ: 0123456789" />
                </div>

                <button type="submit" class="btn btn-success w-100 mt-3">Xác nhận đã chuyển khoản (DEMO)</button>
            </form>
        </div>
    </div>


</div>



