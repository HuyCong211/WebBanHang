@{
    ViewBag.Title = "Tra cứu đơn hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container" style="margin-top:150px; margin-bottom:100px;">
    <h3 class="mb-4 text-center"><i class="fas fa-search"></i> Tra cứu đơn hàng</h3>

    @if (TempData["Info"] != null)
    {
        <div class="alert alert-info">@TempData["Info"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    @using (Html.BeginForm("TraCuu", "KhachHang", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label">Mã đơn hàng</label>
                    <input name="maDonHang" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Email đặt hàng</label>
                    <input type="email" name="email" class="form-control" required />
                </div>
                <button class="btn btn-primary">Tra cứu</button>
            </div>
        </div>
    }
</div>

