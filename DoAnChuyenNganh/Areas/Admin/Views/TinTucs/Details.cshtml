@model DoAnChuyenNganh.Models.EF.TinTuc

@{
    ViewBag.Title = "Chi tiết";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


@section naviheader
{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/tintucs" class="nav-link">Tin tức</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Chi tiết</a>
        </li>
    </ul>
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Chi tiết tin tức</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin/tintucs/">Tin tức</a></li>
                    <li class="breadcrumb-item active">Chi tiết</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin chi tiết tin tức</h3>

        </div>
        <div class="card-body">
            <div class="bs-stepper-content">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.TieuDe)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.TieuDe)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Slug)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Slug)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.TomTat)
                    </dt>

                    <dd>
                        @Html.Raw(Model.TomTat)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.NoiDung)
                    </dt>

                    <dd>
                        @Html.Raw(Model.NoiDung)
                        @*@Html.DisplayFor(model => model.NoiDung)*@
                    </dd>

                    <dt>
                        Ảnh tin tức
                    </dt>
                    <dd>
                        @if (Model.HinhAnhTinTucs != null && Model.HinhAnhTinTucs.Any())
                        {
                            foreach (var img in Model.HinhAnhTinTucs)
                            {
                                <img src="@Url.Content(img.Url)"
                                     alt="Ảnh tin tức"
                                     style="width:150px; height:110px; object-fit:cover; margin:5px; border:1px solid #ccc;" />
                            }
                        }
                        else
                        {
                            <span>Không có ảnh</span>
                        }
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.NgayDang)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.NgayDang)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.TrangThai)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.TrangThai)
                    </dd>

                </dl>
            </div>
            <a href="@Url.Action("Edit", new { id = Model.TinTucId })" class="btn btn-primary">Sửa</a>
            <a href="@Url.Action("Index")" class="btn btn-dark">Quay lại</a>
        </div>
    </div>
</section>

