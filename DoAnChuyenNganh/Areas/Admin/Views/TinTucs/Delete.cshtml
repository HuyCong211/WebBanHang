@model DoAnChuyenNganh.Models.EF.TinTuc

@{
    ViewBag.Title = "Xóa tin tức";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


@section naviheader
{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/tintucs" class="nav-link">Tin tức</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Xóa</a>
        </li>
    </ul>
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Xóa tin tức</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin/tintucs/">Tin tức</a></li>
                    <li class="breadcrumb-item active">Xóa</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin xóa tin tức</h3>

        </div>
        <div class="card-body">
            <div class="bs-stepper-content">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.TieuDe)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.TieuDe)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Slug)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Slug)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.TomTat)
                    </dt>

                    <dd>
                        @Html.Raw(Model.TomTat)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.NoiDung)
                    </dt>

                    <dd>
                        @Html.Raw(Model.NoiDung)
                    </dd>

                    <dt>
                        Ảnh tin tức
                    </dt>
                    <dd>
                        @if (Model.HinhAnhTinTucs != null && Model.HinhAnhTinTucs.Any())
                        {
                            foreach (var img in Model.HinhAnhTinTucs)
                            {
                                <img src="@Url.Content(img.Url)"
                                     alt="Ảnh tin tức"
                                     style="width:150px; height:100px; object-fit:cover; margin:5px; border:1px solid #ccc;" />
                            }
                        }
                        else
                        {
                            <span>Không có ảnh</span>
                        }
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.NgayDang)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.NgayDang)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.TrangThai)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.TrangThai)
                    </dd>

                </dl>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <button type="button" class="btn btn-danger btnXoa" data-id="@Model.TinTucId">Xóa</button>
                        <a href="@Url.Action("Index")" class="btn btn-dark">Quay lại</a>
                    </div>
                }
            </div>
        </div>
    </div>
</section>


<div id="thongBaoXoa" class="mt-2"></div>

@section scripts{
    <script>
        $(document).ready(function () {
            $(".btnXoa").click(function () {
                var id = $(this).data("id");

                if (!confirm("Bạn có chắc chắn muốn xóa tin tức này?")) {
                    return; // nếu bấm Cancel thì thoát luôn
                }

                $.ajax({
                    url: '@Url.Action("Delete", "TinTucs")',
                    type: 'POST',
                    data: { id: id },
                    success: function (res) {
                        if (res.success) {
                            $("#thongBaoXoa").html("<div class='alert alert-success'>" + res.message + "</div>");
                            setTimeout(function () {
                                window.location.href = '@Url.Action("Index", "TinTucs")';
                            }, 1000);
                        } else {
                            $("#thongBaoXoa").html("<div class='alert alert-danger'>" + res.message + "</div>");
                        }
                    },
                    error: function () {
                        $("#thongBaoXoa").html("<div class='alert alert-danger'>Có lỗi xảy ra khi xóa tin tức.</div>");
                    }
                });
            });
        });
    </script>
}