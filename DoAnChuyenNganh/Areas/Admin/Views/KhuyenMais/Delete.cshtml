@model DoAnChuyenNganh.Models.EF.KhuyenMai

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


@section naviheader
{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/khuyenmais" class="nav-link">Khuyến mại</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Xóa</a>
        </li>
    </ul>
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Xóa khuyến mại</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin/khuyenmais/">Khuyến mại</a></li>
                    <li class="breadcrumb-item active">Xóa</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin xóa khuyến mại</h3>

        </div>
        <div class="card-body">
            <div class="bs-stepper-content">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.MaKM)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.MaKM)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.TenKM)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.TenKM)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Loai)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Loai)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.GiaTri)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.GiaTri)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.NgayBatDau)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.NgayBatDau)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.NgayKetThuc)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.NgayKetThuc)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.DieuKien)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.DieuKien)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.TrangThai)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.TrangThai)
                    </dd>
                    <dt>
                        Sản phẩm áp dụng
                    </dt>

                    <dd>
                        @if (Model.SanPhams != null && Model.SanPhams.Any())
                        {
                            foreach (var sp in Model.SanPhams)
                            {
                                <span class="badge badge-info" style="margin:2px;">@sp.TenSanPham</span>
                            }
                        }
                        else
                        {
                            <span class="text-muted">Chưa áp dụng</span>
                        }
                    </dd>
                </dl>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <button type="button" class="btn btn-danger btnXoa" data-id="@Model.KhuyenMaiId">Xóa</button>

                        <a href="@Url.Action("Index")" class="btn btn-dark">Quay lại</a>
                    </div>
                }
            </div>
        </div>
    </div>
</section>


<div id="thongBaoXoa" class="mt-2"></div>

@section scripts{
    <script>
        $(document).ready(function () {
            $(".btnXoa").click(function () {
                var id = $(this).data("id");

                if (!confirm("Bạn có chắc chắn muốn xóa khuyến mại này?")) {
                    return; // nếu bấm Cancel thì thoát luôn
                }

                $.ajax({
                    url: '@Url.Action("Delete", "KhuyenMais")',
                    type: 'POST',
                    data: { id: id },
                    success: function (res) {
                        if (res.success) {
                            $("#thongBaoXoa").html("<div class='alert alert-success'>" + res.message + "</div>");
                            setTimeout(function () {
                                window.location.href = '@Url.Action("Index", "KhuyenMais")';
                            }, 1000);
                        } else {
                            $("#thongBaoXoa").html("<div class='alert alert-danger'>" + res.message + "</div>");
                        }
                    },
                    error: function () {
                        $("#thongBaoXoa").html("<div class='alert alert-danger'>Có lỗi xảy ra khi xóa khuyến mại.</div>");
                    }
                });
            });
        });
    </script>
}
