@model DoAnChuyenNganh.Models.EF.KhuyenMai

@{
    ViewBag.Title = "Chi tiết";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}



@section naviheader
{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/khuyenmais" class="nav-link">Khuyến mại</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Chi tiết</a>
        </li>
    </ul>
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Chi tiết khuyến mại</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin/khuyenmais/">Khuyến mại</a></li>
                    <li class="breadcrumb-item active">Chi tiết</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin chi tiết khuyến mại</h3>

        </div>
        <div class="card-body">
            <div class="bs-stepper-content">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.MaKM)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.MaKM)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.TenKM)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.TenKM)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Loai)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Loai)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.GiaTri)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.GiaTri)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.NgayBatDau)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.NgayBatDau)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.NgayKetThuc)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.NgayKetThuc)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.DieuKien)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.DieuKien)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.TrangThai)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.TrangThai)
                    </dd>
                    <dt>
                       Sản phẩm áp dụng
                    </dt>

                    <dd>
                        @if (Model.SanPhams != null && Model.SanPhams.Any())
                        {
                            foreach (var sp in Model.SanPhams)
                            {
                                <span class="badge badge-info" style="margin:2px;">@sp.TenSanPham</span>
                            }
                        }
                        else
                        {
                            <span class="text-muted">Chưa áp dụng</span>
                        }
                    </dd>

                </dl>
            </div>
            <a href="@Url.Action("Edit", new { id = Model.KhuyenMaiId })" class="btn btn-primary">Sửa</a>
            <a href="@Url.Action("Index")" class="btn btn-dark">Quay lại</a>
        </div>
    </div>
</section>


