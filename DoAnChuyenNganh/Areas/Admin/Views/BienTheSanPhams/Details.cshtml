@model DoAnChuyenNganh.Models.EF.BienTheSanPham

@{
    ViewBag.Title = "Chi tiết";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}



@section naviheader
{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/biensanphams" class="nav-link">Biến thể sản phẩm</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Chi tiết</a>
        </li>
    </ul>
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Chi tiết biến thể sản phẩm</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin/biensanphams/">Biến thể sản phẩm</a></li>
                    <li class="breadcrumb-item active">Chi tiết</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin chi tiết biến thể sản phẩm</h3>

        </div>
        <div class="card-body">
            <div class="bs-stepper-content">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.SanPham.MaSanPham)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.SanPham.MaSanPham)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.SKU)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.SKU)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Gia)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Gia)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.GiaKhuyenMai)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.GiaKhuyenMai)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.MaVach)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.MaVach)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.TrangThai)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.TrangThai)
                    </dd>
                    <dt>Thuộc tính & Giá trị</dt>
                    <dd>
                        @if (Model.GiaTriThuocTinhs != null && Model.GiaTriThuocTinhs.Any())
                        {
                            <ul>
                                @foreach (var gt in Model.GiaTriThuocTinhs)
                                {
                                    <li>@gt.ThuocTinh.TenThuocTinh: @gt.TenGiaTri</li>
                                }
                            </ul>
                        }
                        else
                        {
                            <span>Không có</span>
                        }
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.NgayTao)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.NgayTao)
                    </dd>

                </dl>
            </div>
            <a href="@Url.Action("Edit", new { id = Model.BienTheId })" class="btn btn-primary">Sửa</a>
            <a href="@Url.Action("Index")" class="btn btn-dark">Quay lại</a>
        </div>
    </div>
</section>

