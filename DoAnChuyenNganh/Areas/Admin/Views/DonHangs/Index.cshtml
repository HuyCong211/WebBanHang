@model IEnumerable<DoAnChuyenNganh.Models.EF.DonHang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section naviheader
{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/donhangs" class="nav-link">Quản lý đơn hàng</a>
        </li>
    </ul>
}

<div class="container-fluid mt-3">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">
            <i class="fas fa-shopping-cart"></i> Quản lý đơn hàng
        </h2>

        <form method="get" class="form-inline">
            <input type="text" name="search" value="@ViewBag.Search" class="form-control mr-2" placeholder="Tìm mã đơn hoặc ID người dùng" />
            <select name="trangThai" class="form-control mr-2">
                <option value="">-- Trạng thái --</option>
                <option value="0" @(ViewBag.TrangThai == 0 ? "selected" : "")>Chờ xử lý</option>
                <option value="1" @(ViewBag.TrangThai == 1 ? "selected" : "")>Đã xác nhận</option>
                <option value="2" @(ViewBag.TrangThai == 2 ? "selected" : "")>Đang giao</option>
                <option value="3" @(ViewBag.TrangThai == 3 ? "selected" : "")>Hoàn tất</option>
                <option value="4" @(ViewBag.TrangThai == 4 ? "selected" : "")>Đã hủy</option>
            </select>
            <button type="submit" class="btn btn-primary">Lọc</button>
        </form>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover table-bordered mb-0 text-center align-middle">
                <thead class="thead-dark">
                    <tr>
                        <th>Mã đơn</th>
                        <th>Khách hàng</th>
                        <th>Tổng tiền</th>
                        <th>Ngày tạo</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">Không có đơn hàng nào.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            string statusText = "";
                            string statusClass = "badge-secondary";

                            switch (item.TrangThai)
                            {
                                case 0:
                                    statusText = "Chờ xử lý";
                                    statusClass = "badge-warning";
                                    break;
                                case 1:
                                    statusText = "Đã xác nhận";
                                    statusClass = "badge-info";
                                    break;
                                case 2:
                                    statusText = "Đang giao";
                                    statusClass = "badge-primary";
                                    break;
                                case 3:
                                    statusText = "Hoàn tất";
                                    statusClass = "badge-success";
                                    break;
                                case 4:
                                    statusText = "Đã hủy";
                                    statusClass = "badge-danger";
                                    break;
                            }

                            <tr>
                                <td><strong>@item.MaDonHang</strong></td>
                                <td>
                                    @(item.KhachHang != null
                                        ? $"KH#{item.KhachHang.KhachHangId}"
                                        : "Khách vãng lai")
                                </td>
                                <td>@item.TongTien.ToString("N0") đ</td>
                                <td>@(item.NgayTao?.ToString("dd/MM/yyyy HH:mm"))</td>

                                <td>
                                    <span class="badge @statusClass">@statusText</span>
                                </td>
                                <td>
                                    <a href="@Url.Action("Details", new { id = item.DonHangId })" class="btn btn-sm btn-outline-info mr-2">
                                        <i class="fas fa-eye"></i> Xem
                                    </a>
                                    <button class="btn btn-sm btn-outline-warning btn-update-status" data-id="@item.DonHangId">
                                        <i class="fas fa-sync"></i> Trạng thái
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(".btn-update-status").click(function () {
            var id = $(this).data("id");
            var newStatus = prompt("Nhập trạng thái mới (0: Chờ, 1: Xác nhận, 2: Đang giao, 3: Hoàn tất, 4: Hủy):");
            if (newStatus === null || newStatus === "") return;

            $.ajax({
                url: '@Url.Action("UpdateStatus", "DonHangs")',
                type: 'POST',
                data: { id: id, trangThai: newStatus },
                success: function (res) {
                    alert(res.message);
                    if (res.success) location.reload();
                },
                error: function () {
                    alert("Có lỗi xảy ra khi cập nhật!");
                }
            });
        });
    </script>
}

<style>
    h2 i {
        color: #007bff;
    }

    .badge {
        font-size: 0.9rem;
        padding: 6px 12px;
        border-radius: 12px;
    }

    table th, table td {
        vertical-align: middle !important;
    }

    .card {
        border-radius: 10px;
        overflow: hidden;
    }

    .thead-dark th {
        background-color: #343a40 !important;
        color: #fff !important;
    }
</style>




