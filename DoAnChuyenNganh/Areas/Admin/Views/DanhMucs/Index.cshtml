@model PagedList.IPagedList<DoAnChuyenNganh.Models.EF.DanhMuc>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


@section naviheader
{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/danhmucs" class="nav-link">Danh mục</a>
        </li>
    </ul>
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản lý danh mục sản phẩm</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin/home/">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Danh mục</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">

        <div class="card-header d-flex justify-content-between align-items-center">
            <h3 class="card-title">Danh sách danh mục</h3>
        </div>
        <div class="card-header d-flex justify-content-between align-items-center">
            <!-- Form tìm kiếm bên trái -->
            <form method="get" action="@Url.Action("Index")" class="form-inline">
                <input type="text" name="tim" value="@ViewBag.CurrentFilter"
                       class="form-control mr-2" style="width:350px;" placeholder="Nhập tên danh mục hoặc danh mục cha..." />
                <button type="submit" class="btn btn-primary">Tìm kiếm</button>
            </form>

            <!-- Nút bên phải -->
            <div class="ml-auto">
                <a href="/admin/danhmucs/create" class="btn btn-primary">Thêm mới</a>
                <a href="#" class="btn btn-danger" id="BtnDeleteAll">Xóa</a>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <!--Chọn tất cả bản ghi-->
                        <th><input type="checkbox" id="SelectAll" /></th>
                        <th>STT</th>
                        <th>
                            Danh mục cha
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.First().TenDanhMuc)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.First().Slug)
                        </th>
                        @*<th>
                                @Html.DisplayNameFor(model => model.First().MoTa)
                            </th>*@
                        @*<th>
                                @Html.DisplayNameFor(model => model.ThuTu)
                            </th>*@
                        <th>
                            @Html.DisplayNameFor(model => model.First().TrangThai)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                @{
                    // Lấy vị trí bắt đầu của STT cho trang hiện tại
                    int stt = (Model.PageNumber - 1) * Model.PageSize + 1;
                }
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td><input type="checkbox" class="cbkItem" value="@item.DanhMucId" /></td>
                                <td>@stt</td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DanhMuc2.TenDanhMuc)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TenDanhMuc)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Slug)
                                </td>
                                @*<td>
                                        @Html.DisplayFor(modelItem => item.MoTa)
                                    </td>*@
                                @*<td>
                                        @Html.DisplayFor(modelItem => item.ThuTu)
                                    </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.TrangThai)
                                </td>
                                <td>
                                    <a href="@Url.Action("Edit", new { id = item.DanhMucId})" class="btn btn-primary">Sửa</a>
                                    <a href="@Url.Action("Details", new { id = item.DanhMucId })" class="btn btn-dark">Chi tiết</a>
                                    <a href="@Url.Action("Delete", new { id = item.DanhMucId })" class="btn btn-danger">Xóa</a>
                                </td>
                            </tr>
                            stt++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" style="text-align:center">Không có bản ghi nào</td>
                        </tr>

                    }
                </tbody>
            </table>
            <br />
            <div class="row">
                <div class="col-12 text-center" style="margin-bottom:8px; font-weight:bold;">
                    Trang @(Model.PageNumber) / @(Model.PageCount)
                    @*<br />*@
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, tim = Request.QueryString["tim"] }))
                </div>
            </div>

        </div>
    </div>
</section>

<!--Code để chọn xóa nhiều -->



@section scripts{
    <script>
            $(document).ready(function () {
                // Xóa nhiều
                $('body').on('click', '#BtnDeleteAll', function (e) {
                    e.preventDefault();
                    var ids = [];
                    $('.card-body').find('tr td input.cbkItem:checked').each(function () {
                        ids.push($(this).val());
                    });

                    if (ids.length === 0) {
                        alert("Vui lòng chọn ít nhất một bản ghi.");
                        return;
                    }

                    $.ajax({
                        url: '/admin/danhmucs/deleteAll',
                        type: 'POST',
                        data: { ids: ids.join(",") },
                        success: function (rs) {
                            if (rs.hasChild) {
                                if (confirm(rs.message)) {
                                    $.ajax({
                                        url: '/admin/danhmucs/deleteAll',
                                        type: 'POST',
                                        data: { ids: ids.join(","), forceDelete: true },
                                        success: function (rs2) {
                                            if (rs2.success) {
                                                alert(rs2.message);
                                                location.reload();
                                            }
                                        }
                                    });
                                } else {
                                    window.location.href = "/admin/danhmucs";
                                }
                            } else if (rs.success) {
                                alert(rs.message);
                                location.reload();
                            } else {
                                alert(rs.message);
                            }
                        }
                    });
                });


                // Chọn tất cả
                $('body').on('change', '#SelectAll', function () {
                    var checkStatus = this.checked;
                    var checkbox = $(this).parents('.card-body').find('tr td input:checkbox');
                    checkbox.each(function () {
                        this.checked = checkStatus;
                        if (this.checked) {
                            checkbox.attr('selected', 'checked');
                        }
                        else {
                            checkbox.attr('selected', '');
                        }

                    });
                });
            });
    </script>
}



