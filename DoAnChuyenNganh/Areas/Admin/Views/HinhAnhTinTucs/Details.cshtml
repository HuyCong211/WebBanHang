@model DoAnChuyenNganh.Models.EF.HinhAnhTinTuc

@{
    ViewBag.Title = "Chi tiết";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


@section naviheader
{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/hinhanhtintucs" class="nav-link">Ảnh tin tức</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Chi tiết</a>
        </li>
    </ul>
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Chi tiết ảnh tin tức</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin/hinhanhtintucs/">Ảnh tin tức</a></li>
                    <li class="breadcrumb-item active">Chi tiết</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin chi tiết ảnh tin tức</h3>

        </div>
        <div class="card-body">
            <div class="bs-stepper-content">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.TinTuc.TieuDe)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.TinTuc.TieuDe)
                    </dd>

                    <dt>
                        <img src="@Model.Url" alt="Ảnh tin tức" style="max-height:200px; border:1px solid #ddd; padding:4px;" />
                        <br />
                        @Html.DisplayNameFor(model => model.Url)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Url)
                    </dd>

                </dl>
            </div>
            <a href="@Url.Action("Edit", new { id = Model.HinhAnhId })" class="btn btn-primary">Sửa</a>
            <a href="@Url.Action("Index")" class="btn btn-dark">Quay lại</a>
        </div>
    </div>
</section>

